@{
    Layout = "_LandingPageLayout";
}

@{
    if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-dismissible alert-success fade show" role="alert">
            <strong>Success!</strong> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alter" aria-label="Close"></button>
        </div>
    }
    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-dismissible alert-danger fade show" role="alert">
            <strong>Error!</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alter" aria-label="Close"></button>
        </div>
    }
}
<section class="d-flex justify-content-center" id="hero_page">
    <div id="loadingSpinner" class="m-auto">
    @await Html.PartialAsync("~/Views/Shared/_LoadingSpinner.cshtml") 
    </div>
    <div class="load-content">
        <div class="row m-auto text-center h-100 align-items-center text-light col-12">
            <div class="col-lg-4 d-flex align-items-center justify-content-center mt-4">
                @await Html.PartialAsync("~/Views/Registration/Components/_RegistrationForm.cshtml"/*, yourViewModel */)
            </div>
            <div class="col-lg-8 d-none d-lg-block">
                @await Html.PartialAsync("~/Views/Shared/_LandingPageContent.cshtml"/*, yourViewModel */)
                @* <partial name="_LoginPartial"/> *@
            </div>
        </div>
    </div>
</section>