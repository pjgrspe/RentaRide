@using RentaRide.Utilities
@model RentaRide.Models.ViewModels.AdminPartialViewModel

<div class="w-100 d-flex justify-content-center">
    <div class="row table-responsive bg-dark-secondary text-white">
        <div class="row justify-content-between mt-4 search-filter-container">
            @* TITLE *@
            <div class="col-md-3 d-flex align-items-center">
                <h1 class="text-light ms-2 search-filter-title">Cars</h1>
            </div>
            @* SEARCH AND FILTER *@
            <div class="col-md-9 d-flex justify-content-end">
                <form class="d-flex justify-content-end align-items-center rounded-3 search-filter-form" onsubmit="return false;">
                    <input id="searchInput" class="form-control me-2 rounded-3 search-input" type="search" placeholder="Search" aria-label="Search">
                    <select id="statusFilter" class="form-select me-2 filter-select">
                        <option value="" selected>All Statuses</option>
                        <option value="active">Active</option>
                        <option value="onduty">Listed</option>
                        <option value="delay">Unlisted</option>
                    </select>
                    <button class="btn btn-outline-light rounded-3 search-filter-btn" type="button" onclick="filterTable()">Search</button>
                </form>
            </div>
        </div>
        @* ADD DRIVER BUTTON *@
        <div class="mt-2 mb-2 me-3 col-md-12 d-flex justify-content-end border-bottom-line">
            <button class="btn btn-success addnew-btn" type="button" onclick="openModalAddDriver()">Add New +</button>
        </div>
        @* LOADER *@
        <div id="loader" class="d-flex justify-content-center align-items-center d-none" style="height:70vh; margin-bottom:100px;">
            <partial name="_LoadingSimple"></partial>
        </div>
        @* CARS TABLE *@
        <div id="tableContent" class="d-flex justify-content-center cards-table-container">
            <div class="row p-4 w-100" id="cards-table">
                @* CARDS *@
                @* CARD START *@
                <div class="col-xl-3 col-lg-4 col-md-6 col-12 mb-4 card-item" data-status="onduty">
                    <div class="card-sl bg-glass-cards clickable">
                        <div class="card-image">
                            <img src="https://images.pexels.com/photos/2127733/pexels-photo-2127733.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="card-heading text-light">
                                Lamborghini Aventador
                            </div>
                            <div class="card-text card-text-description mb-4">
                                Car Description
                            </div>
                            <div class="card-text text-center mt-auto">
                                <div class="text-center status status-onduty"><span class="status-label text-dark">Listed</span></div>
                            </div>
                            <button href="#" class="card-button btn btn-primary rounded-4 mt-1">Edit</button>
                        </div>
                    </div>
                </div>
                @* CARD END *@
                @* CARD START *@
                <div class="col-xl-3 col-lg-4 col-md-6 col-12 mb-4 card-item" data-status="onduty">
                    <div class="card-sl bg-glass-cards clickable">
                        <div class="card-image">
                            <img src="https://images.pexels.com/photos/1149831/pexels-photo-1149831.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="card-heading text-light">
                                Audi Q8
                            </div>
                            <div class="card-text card-text-description mb-4">
                                Car Description
                            </div>
                            <div class="card-text text-center mt-auto">
                                <div class="text-center status status-active"><span class="status-label text-dark">Active</span></div>
                            </div>
                            <button href="#" class="card-button btn btn-primary rounded-4 mt-1">Edit</button>
                        </div>
                    </div>
                </div>
                @* CARD END *@
                <div id="no-results" class="text-center" style="margin-top:180px; display:none;">
                    <h3>No cars found.</h3>
                </div>
            </div>
        </div>
    </div>
</div>