<!-- Modal Structure -->
<!-- Modal Structure -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark-secondary text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">User Details</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>ID:</strong> <span id="modalUserId"></span></p>
                            <p><strong>Name:</strong> <span id="modalUserName"></span></p>
                            <p><strong>Email:</strong> <span id="modalUserEmail"></span></p>
                            <p><strong>Contact:</strong> <span id="modalUserContact"></span></p>
                            <p><strong>Status:</strong> <span id="modalUserStatus"></span></p>
                            <p><strong>Date Created:</strong> <span id="modalDateCreated"></span></p>
                            <p><strong>Date Modified:</strong> <span id="modalDateModified"></span></p>
                            <p><strong>Date of Birth:</strong> <span id="modalDateOfBirth"></span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Street Address:</strong> <span id="modalStreetAddress"></span></p>
                            <p><strong>City:</strong> <span id="modalCity"></span></p>
                            <p><strong>Province:</strong> <span id="modalProvince"></span></p>
                            <div class="mb-3">
                                <label><strong>Driver's License:</strong></label>
                                <div id="modalDriversLicense" class="border p-2">DL Placeholder</div>
                            </div>
                            <div class="mb-3">
                                <label><strong>Secondary ID:</strong></label>
                                <div id="modalSecondaryID" class="border p-2">ID Placeholder</div>
                            </div>
                            <div class="mb-3">
                                <label><strong>Proof of Billing:</strong></label>
                                <div id="modalProofOfBilling" class="border p-2">Billing Placeholder</div>
                            </div>
                            <div class="mb-3">
                                <label><strong>Selfie with ID:</strong></label>
                                <div id="modalSelfieWithID" class="border p-2">Selfie Placeholder</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="approveUser()">Approve</button>
                <button type="button" class="btn btn-danger" onclick="denyUser()">Deny</button>
            </div>
        </div>
    </div>
</div>
