<div class="w-100 d-flex justify-content-center">
    <div class="container table-responsive-orders bg-dark-secondary text-white p-5">
        <div class="row justify-content-between mb-3">
            @* TITLE *@
            <div class="col-md-3 d-flex align-items-center">
                <h1 class="text-light ms-2">Orders</h1>
            </div>
            @* SEARCH AND FILTER *@
            <div class="col-md-9 d-flex justify-content-end pe-0">
                <form class="d-flex align-items-center" onsubmit="return false;">
                    <input id="searchInput" class="form-control me-2 rounded-3" type="search" placeholder="Search" aria-label="Search">
                    <select id="statusFilter" class="form-select me-2 rounded-3">
                        <option value="" selected>All Payment Statuses</option>
                        <option value="paid">Paid</option>
                        <option value="partial">Partial</option>
                        <option value="unpaid">Unpaid</option>
                    </select>
                    <select id="statusFilter-2" class="form-select me-2 rounded-3">
                        <option value="" selected>All Order Statuses</option>
                        <option value="pending">Pending</option>
                        <option value="ongoing">On Going</option>
                        <option value="cancelled">Cancelled</option>
                        <option value="done">Done</option>
                    </select>
                    <button id="searchButton" class="btn btn-outline-light rounded-3" type="button" onclick="ordersFilterTable()">Search</button>
                </form>
            </div>
        </div>
        @* ADD ORDERS BUTTON *@
        <div class="row mb-3">
            <div class="col-md-12 d-flex justify-content-end">
                <button class="btn btn-success rounded-3" style="min-width:120px; min-height:50px;" type="button" onclick="openModalAddOrder()">Add Order +</button>
            </div>
        </div>
        @* TABLE WRAPPER *@
        <div class="row bg-dark-secondary text-white">
            @* LOADER *@
            <div id="loader" class="d-flex justify-content-center align-items-center d-none" style="height:40vh; margin-bottom:100px;">
                <partial name="_LoadingSimple"></partial>
            </div>
            @* TABLE CONTENT *@
            <div id="tableContent" class="d-flex justify-content-center">
                @await Html.PartialAsync("~/Views/Admin/TabComponents/Orders/Content.cshtml")
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Admin/TabComponents/Orders/Modals.cshtml")
