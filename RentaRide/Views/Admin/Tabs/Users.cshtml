<div class="w-100 d-flex justify-content-center">
    <div class="row table-responsive bg-dark-secondary text-white">
        <div class="row justify-content-between search-filter-container">
            @* TITLE *@
            <div class="col-md-3 d-flex align-items-center title-div">
                <h1 class="text-light ms-2 search-filter-title">Users</h1>
            </div>
            @* SEARCH AND FILTER *@
            <div class="col-md-9 d-flex justify-content-end pe-0">
                <form class="d-flex justify-content-end align-items-center search-filter-form" onsubmit="return false;">
                    <input id="searchInput" class="form-control me-2 rounded-3 search-input" type="search" placeholder="Search" aria-label="Search">
                    <select id="statusFilter" class="form-select me-2 rounded-3 filter-select">
                        <option value="" selected>All Statuses</option>
                        <option value="pending">Pending</option>
                        <option value="active">Approved</option>
                        <option value="denied">Denied</option>
                        <option value="delay">Inactive</option>
                    </select>
                    <button id="searchButton" class="btn btn-outline-light rounded-3 search-filter-btn" type="button" onclick="filterTable()">Search</button>
                </form>
            </div>
        </div>
        @* LOADER *@
        <div id="loader" class="d-flex justify-content-center align-items-center d-none" style="height:55vh; margin-bottom:100px;">
            <partial name="_LoadingSimple"></partial>
        </div>
        @* TABLE CONTENT *@
        <div id="tableContent" class="d-flex justify-content-center">
            <partial name="~/Views/Admin/TabComponents/Users/Content.cshtml"></partial>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Admin/TabComponents/Users/Modals.cshtml")