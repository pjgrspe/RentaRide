<div class="w-100 d-flex justify-content-center">
    <div class="row table-responsive bg-dark-secondary text-white">
        <div class="row justify-content-between mt-3 search-filter-container">
            @* TITLE *@
            <div class="col-md-3 d-flex align-items-center title-div">
                <h1 class="text-light ms-2 search-filter-title">Drivers</h1>
            </div>
            @* SEARCH AND FILTER *@
            <div class="col-md-9 d-flex justify-content-end pe-0">
                <form class="d-flex justify-content-end align-items-center rounded-3 search-filter-form" onsubmit="return false;">
                    <input id="searchInput" class="form-control me-2 rounded-3 search-input" type="search" placeholder="Search" aria-label="Search">
                    <select id="statusFilter" class="form-select me-2 filter-select">
                        <option value="" selected>All Statuses</option>
                        <option value="active">Active</option>
                        <option value="onduty">On Duty</option>
                        <option value="delay">Inactive</option>
                    </select>
                    <button id="searchButton" class="btn btn-outline-light rounded-3 search-filter-btn" type="button" onclick="filterTable()">Search</button>
                </form>
            </div>
        </div>
        @* ADD DRIVER BUTTON *@
        <div class="mt-2 mb-2 col-md-12 d-flex justify-content-end">
            <button class="btn btn-success addnew-btn" type="button" onclick="openModalAddDriver()">Add New +</button>
        </div>
        @* LOADER *@
        <div id="loader" class="d-flex justify-content-center align-items-center d-none" style="height:70vh; margin-bottom:100px;">
            <partial name="_LoadingSimple"></partial>
        </div>
        @* DRIVERS TABLE *@
        <div id="tableContent" class="d-flex justify-content-center">
            <partial name="~/Views/Admin/TabComponents/Drivers/Content.cshtml"></partial>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Admin/TabComponents/Drivers/Modals.cshtml")
