@using RentaRide.Utilities
@model RentaRide.Models.ViewModels.AdminPartialViewModel

<div class="row p-4 w-100" id="cards-table">
    @* CARDS *@
    @* CARD START *@
    @* LEAVE THIS AS COMMENT FOR NOW *@
    <div class="col-xl-4 col-lg-4 col-md-6 col-12 mb-4 card-item" data-status="onduty">
        <div class="card-sl-listing bg-glass-secondary" onclick="">
            <div class="card-image-listing">
                <img src="https://images.pexels.com/photos/9139594/pexels-photo-9139594.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" />
            </div>
            <div class="card-body d-flex flex-column">
                <div class="card-heading-listing text-light">
                    Lambo 2022 - XYZ 1234
                </div>
                <div class="card-text listing-description">
                    <div class="row">
                        <div class="col-6 text-left"><strong>Daily/Weekly/Monthly: </strong></div>
                        <div class="col-6 text-right">P2,000/P10,000/P20,000</div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left"><strong>Description: </strong></div>
                        <div class="col-6 text-right description-text">Super Sale Promo! Super Sale Promo! Super Sale Promo!</div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left"><strong>Available Date: </strong></div>
                        <div class="col-6 text-right">May 5, 2024</div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-left"><strong>Last order: </strong></div>
                        <div class="col-6 text-right">May 2, 2024</div>
                    </div>
                </div>
                <div class="card-text text-center mt-auto">
                    <div class="text-center status status-onduty">
                        <span class="status-label text-dark">Rented</span>
                    </div>
                </div>
                <button onclick="openModalEditListing()" class="card-button btn btn-primary rounded-4 mt-1">Edit</button>
            </div>
        </div>
    </div>
    @* CARD END *@
    <div id="no-results" class="text-center" style="margin-top:180px; display:none;">
        <h3>No cars found.</h3>
    </div>
</div>