@model RentaRide.Models.ViewModels.AdminPartialViewModel
@using RentaRide.Utilities;

<!-- User Modal Structure -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg p-2">
        <div class="modal-content bg-dark-secondary text-white p-3">
            @* TITLE *@
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="userModalLabel">User Details</h5>
                <button type="button" class="btn-close btn-close-white" onclick="closeModalUserDetails()" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        @* LEFT COLUMN *@
                        <div class="col-md-6">
                            <p><strong>ID:</strong> <span id="modalUserId" class="mb-3"></span></p>
                            <p><strong>Name:</strong> <span id="modalUserName" class="mb-3"></span></p>
                            <p><strong>Email:</strong> <span id="modalUserEmail" class="mb-3"></span></p>
                            <p><strong>Contact:</strong> <span id="modalUserContact" class="mb-3"></span></p>
                            <p><strong>Status:</strong> <span id="modalUserStatus" class="mb-3"></span></p>
                            <p><strong>Date Created:</strong> <span id="modalDateCreated" class="mb-3"></span></p>
                            <p><strong>Date Modified:</strong> <span id="modalDateModified" class="mb-3"></span></p>
                            <p><strong>Date of Birth:</strong> <span id="modalDateOfBirth" class="mb-3"></span></p>
                            <p><strong>Street Address:</strong> <span id="modalStreetAddress" class="mb-3"></span></p>
                            <p><strong>City:</strong> <span id="modalCity" class="mb-3"></span></p>
                            <p><strong>Province:</strong> <span id="modalProvince" class="mb-3"></span></p>
                        </div>
                        @* RIGHT COLUMN *@
                        <div class="col-md-6">
                            @* DRIVERS LICENSE PLACEHOLDER *@
                            <div class="mb-3">
                                <label class="mb-2"><strong>Driver's License:</strong></label>
                                <div id="modalDriversLicense" class="clickable w-100 mb-3 border p-2 rounded d-flex justify-content-center align-items-center position-relative" style="width: 200px; height: 60px; margin: auto;" data-bs-toggle="modal" data-bs-target="#driversLicenseModal">
                                    <div class=" text-light position-absolute top-50 start-50 translate-middle" style="z-index: 10; padding: 5px;">SHOW</div>
                                    <img src="" alt="Driver's License" style="width: 100%; height: 100%; object-fit: cover; filter: blur(5px);">
                                </div>
                            </div>
                            @* SECONDARY ID PLACEHOLDER *@
                            <div class="mb-3">
                                <label class="mb-2"><strong>Secondary ID:</strong></label>
                                <div id="modalSecondaryID" class="clickable w-100 mb-3 border p-2 rounded d-flex justify-content-center align-items-center position-relative" style="width: 200px; height: 60px; margin: auto;" data-bs-toggle="modal" data-bs-target="#secondaryIDModal">
                                    <div class=" text-light position-absolute top-50 start-50 translate-middle" style="z-index: 10; padding: 5px;">SHOW</div>
                                    <img src="" alt="Secondary ID" style="width: 100%; height: 100%; object-fit: cover; filter: blur(5px);">
                                </div>
                            </div>
                            @* POB PLACEHOLDER *@
                            <div class="mb-3">
                                <label class="mb-2"><strong>Proof of Billing:</strong></label>
                                <div id="modalProofOfBilling" class="clickable w-100 mb-3 border p-2 rounded d-flex justify-content-center align-items-center position-relative" style="width: 200px; height: 60px; margin: auto;" data-bs-toggle="modal" data-bs-target="#proofOfBillingModal">
                                    <div class=" text-light position-absolute top-50 start-50 translate-middle" style="z-index: 10; padding: 5px;">SHOW</div>
                                    <img src="" alt="Proof of Billing" style="width: 100%; height: 100%; object-fit: cover; filter: blur(5px);">
                                </div>
                            </div>
                            @* SELFIE WITH ID PLACEHOLDER *@
                            <div class="mb-3">
                                <label class="mb-2"><strong>Selfie with ID:</strong></label>
                                <div id="modalSelfieWithID" class="clickable w-100 mb-3 border p-2 rounded d-flex justify-content-center align-items-center position-relative" style="width: 200px; height: 60px; margin: auto;" data-bs-toggle="modal" data-bs-target="#selfieWithIDModal">
                                    <div class=" text-light position-absolute top-50 start-50 translate-middle" style="z-index: 10; padding: 5px;">SHOW</div>
                                    <img src="" alt="Selfie with ID" style="width: 100%; height: 100%; object-fit: cover; filter: blur(5px);">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* ACTION BTNS *@
            <div class="modal-footer mb-3 border-top-0 d-flex justify-content-center align-content-center">
                @Html.TextBoxFor(m => m.VerifyUser.userverID, new { @class = "form-control", type = "hidden", id = "userID-Verify" })
                <button style="min-width:100px;" type="button" class="btn btn-danger btn-lg rounded-2" onclick="setUserVerify(false)">Deny</button>
                <button style="min-width:100px;" type="button" class="btn btn-warning btn-lg rounded-2" onclick="setUserVerify(null)">Pending</button>
                <button style="min-width:100px;" type="button" class="btn btn-success btn-lg rounded-2" onclick="setUserVerify(true)">Approve</button>
            </div>
        </div>
    </div>
</div>

<!-- Drivers License Modal -->
<div class="modal fade" id="driversLicenseModal" tabindex="-1" aria-labelledby="driversLicenseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-custom p-2">
        <div class="modal-content bg-glass p-3">
            @* TITLE *@
            <div class="modal-header text-light border-bottom-0">
                <h5 class="modal-title" id="driversLicenseModalLabel">Driver's License</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @* DRIVER'S LICENSE FRONT *@
                <div class="row mb-3">
                    <div class="col text-center">
                        <h5 id="driversLicenseFrontLabel">Front</h5>
                        <img id="driversLicenseFrontImage" src="" alt="Driver's License Front" class="img-fluid">
                    </div>
                </div>
                @* DRIVER'S LICENSE BACK *@
                <div class="row">
                    <div class="col text-center">
                        <h5 id="driversLicenseBackLabel">Back</h5>
                        <img id="driversLicenseBackImage" src="" alt="Driver's License Back" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Secondary ID Modal -->
<div class="modal fade" id="secondaryIDModal" tabindex="-1" aria-labelledby="secondaryIDModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-custom p-2">
        <div class="modal-content bg-glass p-3">
            @* TITLE *@
            <div class="modal-header text-light border-bottom-0">
                <h5 class="modal-title" id="secondaryIDModalLabel">Secondary ID</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @* SECONDARY ID PICTURE *@
            <div class="modal-body d-flex justify-content-center align-items-center">
                <img id="secondaryIDImage" src="" alt="Secondary ID" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Proof of Billing Modal -->
<div class="modal fade" id="proofOfBillingModal" tabindex="-1" aria-labelledby="proofOfBillingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-custom p-2">
        <div class="modal-content bg-glass p-3">
            @* TITLE *@
            <div class="modal-header text-light border-bottom-0">
                <h5 class="modal-title" id="proofOfBillingModalLabel">Proof of Billing</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @* POB PICTURE *@
            <div class="modal-body d-flex justify-content-center align-items-center">
                <img id="proofOfBillingImage" src="" alt="Proof of Billing" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Selfie with ID Modal -->
<div class="modal fade" id="selfieWithIDModal" tabindex="-1" aria-labelledby="selfieWithIDModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-custom p-2">
        <div class="modal-content bg-glass p-3">
            @* TITLE *@
            <div class="modal-header text-light border-bottom-0">
                <h5 class="modal-title" id="selfieWithIDModalLabel">Selfie with ID</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @* SELFIE WITH ID  *@
            <div class="modal-body d-flex justify-content-center align-items-center">
                <img id="selfieWithIDImage" src="" alt="Selfie with ID" class="img-fluid">
            </div>
        </div>
    </div>
</div>