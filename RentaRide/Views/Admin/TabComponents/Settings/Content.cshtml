
<div class="settings-container w-100 mt-4">
    <div class="row">
        <!-- Main User Settings Card -->
        <div class="col-md-6 mb-3">
            <div class="card text-light bg-glass-secondary h-100">
                <div class="card-header">
                    <h5 class="card-title">User Details</h5>
                </div>
                <div class="card-body userdetails-body">
                    <p class="card-text"><strong>Company Name:</strong> RentaRide</p>
                    <p class="card-text"><strong>Email:</strong> john.doe@example.com</p>
                    <p class="card-text"><strong>Contact:</strong> 123-456-7890</p>
                    <p class="card-text"><strong>Date Created:</strong> 2024-01-01</p>
                    <p class="card-text"><strong>Address:</strong> 123 Main St, City, Province</p>
                    <p class="card-text"><strong>Date of Birth:</strong> 1990-01-01</p>
                </div>
            </div>
        </div>

        <!-- Account Settings Card -->
        <div class="col-md-6 mb-3">
            <div class="card text-light bg-glass-secondary h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Account Settings</h5>
                    <i class="fas fa-edit fa-lg mt-1" id="editButton" style="cursor:pointer; color: darkgray;" onclick="toggleEdit()"></i>
                </div>
                <div class="card-body">
                    <form id="accountForm">
                        <!-- Username -->
                        <div class="form-group mb-3">
                            <label for="username" class="font-weight-bold">Username</label>
                            <input type="text" class="form-control" id="username" value="john.doe" disabled>
                        </div>
                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label for="password" class="font-weight-bold">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Enter new password" disabled>
                        </div>
                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label for="confirmPassword" class="font-weight-bold">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password" disabled>
                        </div>
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label for="email" class="font-weight-bold">Email</label>
                            <input type="email" class="form-control" id="email" value="john.doe@example.com" disabled>
                        </div>
                        <!-- Contact -->
                        <div class="form-group mb-3">
                            <label for="contact" class="font-weight-bold">Contact</label>
                            <input type="text" class="form-control" id="contact" value="123-456-7890" disabled>
                        </div>
                    </form>
                    <!-- Save Changes and Cancel Buttons -->
                    <div class="btn-container">
                        <div class="modal-footer d-flex justify-content-center border-0 mb-3" id="editButtons" style="display: none;">
                            <button type="button" class="btn btn-secondary" onclick="cancelChanges()">Cancel</button>
                            <button type="button" class="btn btn-success" onclick="saveChanges()">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

