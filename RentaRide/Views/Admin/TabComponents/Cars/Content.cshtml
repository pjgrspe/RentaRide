@using RentaRide.Utilities
@model RentaRide.Models.ViewModels.AdminPartialViewModel

<div class="row p-4 w-100" id="cards-table">
    @* CARDS *@

    @foreach (var cars in Model.Cars)
    {
        <div class="col-xl-3 col-lg-4 col-md-6 col-12 mb-4 card-item" data-status="onduty">
            <div class="card-sl bg-glass-secondary clickable" onclick="openCarDetails('@cars.carVMID')">
                <div class="card-image">
                    <img src="@cars.carVMPicture" />
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="card-heading text-light">
                        @cars.carVMMake @cars.carVMModel
                    </div>
                    <div class="card-text card-text-description text-muted">
                        <div class="row">
                            <div class="col-5 text-left"><strong>Year: </strong></div>
                            <div class="col-7 text-right">@cars.carVMYear</div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left"><strong>Car Type: </strong></div>
                            <div class="col-7 text-right">@cars.carVMType</div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left"><strong>Color: </strong></div>
                            <div class="col-7 text-right">@cars.carVMColor</div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left"><strong>License No.: </strong></div>
                            <div class="col-7 text-right">@cars.carVMPlateNumber</div>
                        </div>
                        <div class="row">
                            <div class="col-5 text-left"><strong>Last log: </strong></div>
                            <div class="col-7 text-right">@cars.carVMFormattedDateLogged</div>
                        </div>
                        @* <div><strong>Year: </strong>carVMYear</div>
                    <div><strong>Car Type: </strong>carVMType</div>
